name 'keyboard'
org 'akerl'

source(
  type: 'git',
  path: '.'
)

build do
  run 'arduino-cli core install keyboardio:avr arduino:avr'
  kaleidoscope_dir = Dir.glob(File.expand_path('~/.arduino15/packages/keyboardio/hardware/avr/*/libraries/Kaleidoscope')).first
  run 'git config --global url."https://".insteadOf git://'
  run "make -C #{kaleidoscope_dir} setup"

  ['model01', 'model100'].each do |board|
    Dir.chdir(board) do
      run 'arduino-cli compile --output-dir output'
      cp "output/#{dirname}.ino.elf", "#{board}.elf"
      cp "output/#{dirname}.ino.hex", "#{board}.hex"
    end
  end
end

package(
  type: 'file',
  artifacts: ['model01', 'model100'].flat_map do |board|
    [
      {
        source: "#{board}.hex",
        name: "#{board}.hex"
      },
      {
        source: "#{board}.elf",
        name: "#{board}.elf"
      }
    ]
  end
)

test do
  # TODO: add tests
end
